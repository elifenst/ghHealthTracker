<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GloomHavenHealthTracker.AddItem">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add an Item"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand"
				   FontFamily="Pirata One"
				   FontSize="25"/>
			<Entry x:Name ="Name" Placeholder="Name" VerticalOptions="Center" FontFamily="Nyala"/>
			<Entry x:Name ="Effects" Placeholder="Effects" VerticalOptions="Center" FontFamily="Nyala"/>
			<Entry x:Name="Cost" Placeholder="Cost" VerticalOptions="Center" FontFamily="Nyala"/>
			<Entry x:Name="ItemID" Placeholder="ItemID" Completed="ItemID_Completed" VerticalOptions="Center" FontFamily="Nyala"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
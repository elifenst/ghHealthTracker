<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GloomHavenHealthTracker.CharacterList">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Characters:"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
			<ListView x:Name="ListCharacters"
                     ItemsSource="{Binding CharacterList}" HorizontalOptions="Center" ItemTapped="OpenCharacter">

				<ListView.ItemTemplate>
					<DataTemplate>

						<ViewCell>
							<ViewCell.View>
								<Frame Padding="0"
									   Margin="5"
									   BorderColor="Transparent"
									   BackgroundColor="White"
									   CornerRadius="10">


										<Label Text="{Binding Name}"
											  
											   TextColor="Black"
											   FontFamily="Pirata One"
											   FontSize="40"
											   HorizontalOptions="FillAndExpand"
											   
											   VerticalOptions="End"
											   Grid.Column="0"
											   Grid.Row="0"
											   Margin="10,10,10,0" />


								</Frame>
							</ViewCell.View>

						</ViewCell>

					</DataTemplate>

				</ListView.ItemTemplate>
			</ListView>
			<Button Text="Add Character"
					Clicked="AddCharacter"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GloomHavenHealthTracker.AddCharacter">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add a character"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
			<Entry x:Name ="Name" Placeholder="Name"/>
			<Entry x:Name ="Class" Placeholder="Class"/>
			<Entry x:Name="Gold" Placeholder="Gold"/>
			<Entry x:Name="Experience" Placeholder="Experience" Completed="Experience_Completed"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>
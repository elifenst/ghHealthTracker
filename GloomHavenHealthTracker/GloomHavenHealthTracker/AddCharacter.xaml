<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GloomHavenHealthTracker.AddCharacter">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add a character"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" FontFamily="Pirata One"/>
			<Entry x:Name ="Name" Placeholder="Name" VerticalOptions="Center" FontFamily="Nyala"/>
			<Entry x:Name ="Class" Placeholder="Class" VerticalOptions="Center" FontFamily="Nyala"/>
			<Entry x:Name="Gold" Placeholder="Gold" VerticalOptions="Center" FontFamily="Nyala"/>
			<Entry x:Name="Experience" Placeholder="Experience" Completed="Experience_Completed" VerticalOptions="Center" FontFamily="Nyala"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>
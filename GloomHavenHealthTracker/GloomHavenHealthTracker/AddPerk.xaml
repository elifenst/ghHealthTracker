<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GloomHavenHealthTracker.AddPerk">
    <ContentPage.Content>
        <StackLayout>
			<Label Text="Add a Perk"
				   FontFamily="Pirata One"
				   FontSize="25"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />
			<Entry x:Name ="Takable" VerticalOptions="Center" FontFamily="Nyala" Placeholder="How many times the perk is available"/>
			<Entry x:Name ="Effect" VerticalOptions="Center" FontFamily="Nyala" Placeholder="Effect" Completed="PerkId_Completed"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>